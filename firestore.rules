rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // レストラン検索結果のコレクション
    match /restaurant-results/{resultId} {
      // ハッカソン用: 全ユーザーが読み書き可能
      // 本番環境では適切な認証・認可ルールを設定してください
      allow read, write: if true;
    }
    
    // テスト用コレクション（接続確認用）
    match /test/{document} {
      allow read: if true;
    }
    
    // 他のすべてのドキュメントは拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
}