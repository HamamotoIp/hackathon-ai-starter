rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // レストラン検索結果HTMLファイル
    match /restaurant-results/{allPaths=**} {
      // 読み取り: 全員許可（パブリックコンテンツ）
      allow read: if true;
      
      // 書き込み: サーバーサイドのみ許可
      allow write: if false;
    }
    
    // 画像アップロード用バケット
    match /images/{allPaths=**} {
      // 読み取り: 全員許可
      allow read: if true;
      
      // 書き込み: 認証されたユーザーのみ、サイズ制限あり
      allow write: if request.auth != null 
                   && resource.size < 5 * 1024 * 1024; // 5MB制限
    }
    
    // その他のファイルは拒否
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}